{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2020"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
